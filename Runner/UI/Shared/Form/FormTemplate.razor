<CascadingValue Value="@IsInline">
    <CascadingValue Value="@Context">
        @if (IsInline)
        {
            <EditForm Model="Model" EditContext="Context" OnValidSubmit="OnSubmit" class="form-inline">
                @ChildContent
            </EditForm>
        }
        else
        {
            <div class="form-sm align-middle">
                <div class="container">
                    <EditForm Model="Model" OnValidSubmit="OnSubmit">
                        @ChildContent
                    </EditForm>
                </div>
            </div>
        }
    </CascadingValue>
</CascadingValue>

@code {
    [Parameter]
    public bool IsInline { get; set; }

    [Parameter]
    public EditContext Context { get; set; }

    [Parameter]
    public object Model { get; set; } = new object();

    [Parameter]
    public Action OnSubmit { get; set; } = delegate { };

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
